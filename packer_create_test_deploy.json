{
  "builders": [{
    "type": "amazon-ebs",
    "region": "ap-northeast-1",
    "source_ami": "ami-decfc0df",
    "instance_type": "t2.medium",
    "ssh_username": "core",
    "ami_name": "carnation test deploy {{isotime | clean_ami_name}}",
    "ami_block_device_mappings": [{ 
        "volume_size": 24, 
        "device_name": "/dev/xvda", 
        "delete_on_termination":false 
    }],
    "ssh_timeout":"5m"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "scripts/",
      "destination": "/home/core"
    },
    {
      "type": "file",
      "source": "conf",
      "destination": "/home/core"
    },
    {
      "type": "file",
      "source": "envfiles/test.env",
      "destination": "/home/core/carnation.env"
    },
    {
      "type": "shell",
      "inline": [
        "docker pull chikaku/carnation",
        "cp /home/core/conf/fluentd.test.conf /home/core/conf/fluentd.conf",
        "sudo systemctl enable /home/core/carnation.service",
        "sudo systemctl enable /home/core/fluentd.service",
        "sudo systemctl daemon-reload",
        "sudo systemctl start carnation.service",
        "sudo systemctl start fluentd.service"
      ]
    }
  ]
}
